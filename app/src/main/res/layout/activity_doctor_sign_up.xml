<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".DoctorSignUpActivity">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:src="@drawable/arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/text_black" />

    <LinearLayout
        android:id="@+id/layoutFooter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Already have an account? "
            android:textColor="#808080" />

        <TextView
            android:id="@+id/textGoToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="SIGN IN"
            android:textColor="#3F80FF"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@+id/layoutFooter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnBack">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="24dp"
            android:paddingVertical="16dp">

            <LinearLayout
                android:id="@+id/headerLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/logo_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="NeuroNexus"
                    android:textColor="@color/text_black"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/textTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/poppins"
                android:text="Doctor Sign up"
                android:textColor="@color/text_black"
                android:textSize="26sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/headerLogo" />

            <TextView
                android:id="@+id/textSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppins"
                android:text="Please fill in your details to register."
                android:textColor="#808080"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textTitle" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutProfileImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textSubtitle">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/doctor"
                    app:civ_border_color="#E0E0E0"
                    app:civ_border_width="2dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@color/colorBackground"
                    android:elevation="4dp"
                    android:padding="6dp"
                    android:src="@android:drawable/ic_menu_camera"
                    app:layout_constraintBottom_toBottomOf="@+id/imgProfile"
                    app:layout_constraintEnd_toEndOf="@+id/imgProfile"
                    app:tint="#3F80FF" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/textUploadHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Upload Photo"
                android:textColor="#3F80FF"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/layoutProfileImage"
                app:layout_constraintStart_toStartOf="@+id/layoutProfileImage"
                app:layout_constraintTop_toBottomOf="@+id/layoutProfileImage" />


            <TextView
                android:id="@+id/labelName"
                style="@style/LoginLabelText"
                android:layout_marginTop="32dp"
                android:text="Full Name *"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textUploadHint" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputName"
                style="@style/LoginInputLayout"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/labelName"
                app:startIconDrawable="@drawable/ic_user">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etName"
                    style="@style/LoginEditText"
                    android:hint="type your fullname"
                    android:inputType="textPersonName" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/labelEmail"
                style="@style/LoginLabelText"
                android:layout_marginTop="16dp"
                android:text="Email *"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/inputName" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputEmail"
                style="@style/LoginInputLayout"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/labelEmail"
                app:startIconDrawable="@drawable/email">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etEmail"
                    style="@style/LoginEditText"
                    android:hint="type your email"
                    android:inputType="textEmailAddress" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/labelContact"
                style="@style/LoginLabelText"
                android:layout_marginTop="16dp"
                android:text="Contact Number *"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/inputEmail" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputContact"
                style="@style/LoginInputLayout"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/labelContact"
                app:startIconDrawable="@drawable/ic_call">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etContact"
                    style="@style/LoginEditText"
                    android:hint="type contact number"
                    android:inputType="phone" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/labelPass"
                style="@style/LoginLabelText"
                android:layout_marginTop="16dp"
                android:text="Password *"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/inputContact" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputPass"
                style="@style/LoginInputLayout"
                android:layout_marginTop="8dp"
                app:endIconMode="password_toggle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/labelPass"
                app:startIconDrawable="@drawable/lock">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPassword"
                    style="@style/LoginEditText"
                    android:hint="type your password"
                    android:inputType="textPassword" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/labelConfirmPass"
                style="@style/LoginLabelText"
                android:layout_marginTop="16dp"
                android:text="Confirm Password *"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/inputPass" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputConfirmPass"
                style="@style/LoginInputLayout"
                android:layout_marginTop="8dp"
                app:endIconMode="password_toggle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/labelConfirmPass"
                app:startIconDrawable="@drawable/lock">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etConfirmPassword"
                    style="@style/LoginEditText"
                    android:hint="re-type your password"
                    android:inputType="textPassword" />
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:id="@+id/headerProfessional"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Professional Details"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/inputConfirmPass" />

            <TextView
                android:id="@+id/labelLicense"
                style="@style/LoginLabelText"
                android:layout_marginTop="16dp"
                android:text="PMDC / License Number *"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/headerProfessional" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputLicense"
                style="@style/LoginInputLayout"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/labelLicense"
                app:startIconDrawable="@drawable/ic_license">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etLicense"
                    style="@style/LoginEditText"
                    android:hint="enter license number"
                    android:inputType="textCapCharacters" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/labelLicenseUpload"
                style="@style/LoginLabelText"
                android:layout_marginTop="16dp"
                android:text="Upload License Copy *"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/inputLicense" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardLicenseUpload"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/labelLicenseUpload"
                app:strokeColor="#E0E0E0"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:id="@+id/licenseImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#F8F9FA"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgLicensePreview"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_license"
                        app:tint="#3F80FF" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/poppins"
                        android:text="Tap to upload image"
                        android:textColor="#808080" />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>


            <TextView
                android:id="@+id/labelSpec"
                style="@style/LoginLabelText"
                android:layout_marginTop="16dp"
                android:text="Specialization *"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardLicenseUpload" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputSpec"
                style="@style/LoginInputLayout"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/labelSpec"
                app:startIconDrawable="@drawable/ic_badge">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etSpec"
                    style="@style/LoginEditText"
                    android:hint="e.g. Cardiologist"
                    android:inputType="textCapWords" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/labelQual"
                style="@style/LoginLabelText"
                android:layout_marginTop="16dp"
                android:text="Qualifications"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/inputSpec" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputQual"
                style="@style/LoginInputLayout"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/labelQual"
                app:startIconDrawable="@drawable/ic_badge">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etQual"
                    style="@style/LoginEditText"
                    android:hint="e.g. MBBS, FCPS"
                    android:inputType="textCapCharacters" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/headerClinic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Clinic Details"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/inputQual" />

            <TextView
                android:id="@+id/labelAddress"
                style="@style/LoginLabelText"
                android:layout_marginTop="16dp"
                android:text="Clinic Address *"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/headerClinic" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputAddress"
                style="@style/LoginInputLayout"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/labelAddress"
                app:startIconDrawable="@drawable/ic_location">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etAddress"
                    style="@style/LoginEditText"
                    android:hint="enter full clinic address"
                    android:inputType="textMultiLine"
                    android:minLines="2" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/labelFee"
                style="@style/LoginLabelText"
                android:layout_marginTop="16dp"
                android:text="Consultation Fee (PKR) *"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/inputAddress" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputFee"
                style="@style/LoginInputLayout"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/labelFee"
                app:startIconDrawable="@drawable/coin">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etFee"
                    style="@style/LoginEditText"
                    android:hint="e.g. 2000"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/labelSchedule"
                style="@style/LoginLabelText"
                android:layout_marginTop="16dp"
                android:text="Available Schedule *"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/inputFee" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputSchedule"
                style="@style/LoginInputLayout"
                android:layout_marginTop="8dp"
                app:endIconMode="custom"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/labelSchedule"
                app:startIconDrawable="@drawable/calendar">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etSchedule"
                    style="@style/LoginEditText"
                    android:gravity="top|start"
                    android:hint="e.g. Mon: 5pm-9pm\nSat: 10am-2pm"
                    android:inputType="textMultiLine|textCapSentences"
                    android:lines="3"
                    android:minLines="2" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRegisterDoctor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/bg_btn_gradient"
                android:fontFamily="@font/poppins"
                android:text="SIGN UP"
                android:textAllCaps="true"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTint="@null"
                app:cornerRadius="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/inputSchedule" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>