<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <View
        android:id="@+id/headerBg"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:background="@drawable/bg_header_rounded_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_white_rounded"
        android:backgroundTint="#20FFFFFF"
        android:padding="10dp"
        android:src="@drawable/arrow_back"
        app:tint="@color/text_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:text="My Profile"
        android:textColor="@color/text_white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btnBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnBack" />

    <ImageView
        android:id="@+id/btnEditProfile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bg_white_rounded"
        android:backgroundTint="#20FFFFFF"
        android:padding="10dp"
        android:src="@drawable/ic_edit"
        app:tint="@color/text_white"
        app:layout_constraintBottom_toBottomOf="@+id/btnBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnBack" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgProfile"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/patient"
        app:civ_border_color="@color/text_white"
        app:civ_border_width="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/poppins"
        android:text="Alex Martines"
        android:textColor="@color/text_white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imgProfile"
        app:layout_constraintStart_toStartOf="@+id/imgProfile"
        app:layout_constraintTop_toBottomOf="@+id/imgProfile" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        app:cardBackgroundColor="@color/text_white"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvName">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    style="@style/ProfileLabelStyle"
                    android:text="Email Address" />

                <TextView
                    android:id="@+id/tvEmail"
                    style="@style/ProfileValueStyle"
                    android:drawableStart="@drawable/email"
                    android:text="alex.martines@gmail.com" />

                <View style="@style/DividerStyle" />

                <TextView
                    style="@style/ProfileLabelStyle"
                    android:layout_marginTop="16dp"
                    android:text="Contact Number" />

                <TextView
                    android:id="@+id/tvPhone"
                    style="@style/ProfileValueStyle"
                    android:drawableStart="@drawable/ic_call"
                    android:text="+92 300 1234567" />

                <View style="@style/DividerStyle" />

                <TextView
                    style="@style/ProfileLabelStyle"
                    android:layout_marginTop="16dp"
                    android:text="CNIC Number" />

                <TextView
                    android:id="@+id/tvCnic"
                    style="@style/ProfileValueStyle"
                    android:drawableStart="@drawable/ic_cnic"
                    android:text="42101-1234567-1" />

                <View style="@style/DividerStyle" />

            </LinearLayout>
        </ScrollView>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>