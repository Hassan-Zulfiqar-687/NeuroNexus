<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:padding="24dp"
    tools:context=".SignUpRoleActivity">

    <TextView
        android:id="@+id/titleSelectRole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/poppins"
        android:text="Select Your Role"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_doctor"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/doctor"
        app:civ_border_width="0dp"
        app:layout_constraintEnd_toEndOf="@+id/titleSelectRole"
        app:layout_constraintStart_toStartOf="@+id/titleSelectRole"
        app:layout_constraintTop_toBottomOf="@+id/titleSelectRole" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_doctor_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="32dp"
        android:text="I am a Doctor"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/bg_btn_gradient"
        app:backgroundTint="@null"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="@+id/img_doctor"
        app:layout_constraintStart_toStartOf="@+id/img_doctor"
        app:layout_constraintTop_toBottomOf="@+id/img_doctor" />

    <TextView
        android:id="@+id/descDoctor"
        android:layout_width="287dp"
        android:layout_height="18dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:text="Manage your clinic, patients, and schedule."
        android:textColor="#546E7A"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@+id/btn_doctor_role"
        app:layout_constraintStart_toStartOf="@+id/btn_doctor_role"
        app:layout_constraintTop_toBottomOf="@+id/btn_doctor_role"
        app:layout_constraintWidth_percent="0.8" />

    <View
        android:id="@+id/divider"
        android:layout_width="200dp"
        android:layout_height="3dp"
        android:layout_marginTop="32dp"
        android:background="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descDoctor" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_patient"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/patient"
        app:civ_border_width="0dp"
        app:layout_constraintEnd_toEndOf="@+id/divider"
        app:layout_constraintStart_toStartOf="@+id/divider"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_patient_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_btn_gradient"
        android:paddingHorizontal="32dp"
        android:text="I am a Patient"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="@+id/img_patient"
        app:layout_constraintStart_toStartOf="@+id/img_patient"
        app:layout_constraintTop_toBottomOf="@+id/img_patient" />

    <TextView
        android:id="@+id/descPatient"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:text="Find doctors, book appointments, and manage your health."
        android:textColor="#546E7A"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@+id/btn_patient_role"
        app:layout_constraintStart_toStartOf="@+id/btn_patient_role"
        app:layout_constraintTop_toBottomOf="@+id/btn_patient_role"
        app:layout_constraintWidth_percent="0.8" />

</androidx.constraintlayout.widget.ConstraintLayout>